<center>
  <table>
    <th>Product Name</th>
    <th>Description</th>
    <th>Price</th>
    <th colspan=3>Actions</th>
    <tr>
      <td><%= @product.product_name %></td>
      <td><%= @product.description %></td>
      <td><%= @product.price %></td>
      <td><%= button_to "Edit", edit_product_path(@product), method: :get %></td>
      <td><%= button_to "Delete", product_path(@product), method: :delete %></td>
      <td><%= button_to "Back", products_path, method: :get %></td>
    </tr>
  </table>
</center>

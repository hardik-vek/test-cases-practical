<h1 class="center">Products Listing</h1>
<center>
  <table>
    <th>Product Name</th>
    <th colspan=3>Actions</th>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= button_to "Show", product_path(product), method: :get %></td>
        <td><%= button_to "Edit", edit_product_path(product), method: :get %></td>
        <td><%= button_to "Delete", product_path(product), method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <p>------------------------------------------------</p>
</center>
<center>
  <div>
    <%= link_to "Add a product", new_product_path %></br>
</div>
<p>------------------------------------------------</p>
</center>
<center>
  <div>
    <%= button_to "sign Out", destroy_user_session_path, method: :delete %>
  </div>
</center>
